@model Flext.Models.ImageUploadForm


@{
    ViewData["Title"] = "Home Page";
    Layout = "_layout";
}

<h2>welkom nibba</h2>

<form id='tt' method="post" enctype="multipart/form-data" asp-controller="Image" asp-action="aquireFiles">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Image" class="control-label">Upload one or more files using this form:</label>
        <input asp-for="Image" type="file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StoelId" class="control-label">stoelID</label><br />
        <input asp-for="StoelId" style="color:black" type="number" />
        <span asp-validation-for="StoelId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input  class="btn btn-info" type="submit" value="Upload" />
        </div>
    </div>
</form>



